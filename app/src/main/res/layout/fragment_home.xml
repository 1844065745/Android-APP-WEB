<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/IPView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="IP:" />
        <EditText
            android:id="@+id/editTextIp"
            android:textSize="12sp"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Enter ESP32 IP"
            android:text="192.168.81.100"/>
        <Button
            android:id="@+id/connectButton"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Connect"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/CMDView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:text="CMD:" />

        <EditText
            android:id="@+id/editTextSend"
            android:textSize="12sp"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="Please input message"
            android:text="S 2" />

        <Button
            android:id="@+id/sendButton"

            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Send" />
    </LinearLayout>

    <TextView
        android:id="@+id/descView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:scrollbars="vertical"
        android:text="Measurement Data"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18dp"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="3dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.4"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/datadevcView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.1"
                    android:text="Frequency:"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/dataView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/volumedecView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="2.1"
                    android:text="Volume:"
                    android:gravity="center_vertical"
                    android:textStyle="bold"/>
                <TextView
                    android:id="@+id/volumeView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textSize="16dp"/>
            </LinearLayout>

        </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/clearButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Clear"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>


    <TextView
        android:id="@+id/dataResultView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.4"
        android:scrollbars="vertical"
        android:text="Sample Data"
        android:textStyle="bold"
        android:gravity="center"
        android:textSize="18dp"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/settingsChart"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"/>


    <TextView
        android:id="@+id/messagesdecView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:text="Messages:"
        android:layout_weight="0.4"
        android:gravity="bottom"
        android:textStyle="bold"/>

    <ScrollView
        android:id="@+id/myscrollView"
        android:layout_width="match_parent"
        android:layout_height="0sp"
        android:layout_weight="1"
        android:gravity="top">

        <TextView
            android:id="@+id/messageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="vertical"/>
    </ScrollView>



</LinearLayout>